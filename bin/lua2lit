#!/usr/bin/env lua
local parser = require("lualit.lua_parser")

local help = [=[Usage: less -f "some_file.lua" | lua2lit > some_file.lua.md

Parse Lua sent to stdin to Lualit. Writes result to stdout.
]=]
if arg[1] == '-h' or arg[1] == '--help' then
  print(help)
else
  local input = io.read("*a")
  io.write(parser.parse_to_lit(input))
end